{
    "manifest_version": 3,
    "name": "QMarkdown",
    "version": "1.0",
    "author": "iQNRen",
    "description": "ai回答转化为markdown",
    "permissions": [
        "activeTab",
        "scripting",
        "windows",
        "contextMenus",
        "clipboardWrite"
    ],
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "html/popup.html",
        "default_icon": {
            "16": "assets/icons/icon16.png",
            "48": "assets/icons/icon48.png",
            "128": "assets/icons/icon128.png"
        }
    },
    "icons": {
        "16": "assets/icons/icon16.png",
        "48": "assets/icons/icon48.png",
        "128": "assets/icons/icon128.png"
    },
    "commands": {
        "open-memo-extension": {
            "suggested_key": {
                "default": "Ctrl+Shift+Q",
                "mac": "Command+Shift+Q"
            },
            "description": "打开插件"
        }
    }
}